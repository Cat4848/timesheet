<h2>Login</h2>
<% if(messages.error) { %>
    <%= messages.error %>
<% } %>
<form action="/login" method="POST">
    <section>
        <label for="email">E-mail</label>
        <input type="email" id="email" name="email" value="<%= locals?.user?.email%>" autocomplete="email">
    </section>
    <section>
        <label for="password">Password</label>
        <input type="password" id="password" name="password" value="<%= locals?.user?.password %>" autocomplete="current-password">
    </section>
    <section>
        <button type="submit">Login</button>
    </section>
</form>