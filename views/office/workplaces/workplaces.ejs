<h2>Search Workplaces</h2>
<form method="GET" action="/office/workplaces">
    <label>Name</label>
    <input type="text" name="name" value="<%= searchOptions.name %>">
    <button type="submit">Search</button>
</form>
<br>

<% if (workplaces != null && workplaces.length > 0) { %>
    <% workplaces.forEach(workplace => { %>
        <div><%= workplace.name %></div>
        <a href="/office/workplaces/<%= workplace.id %>">View</a>
        <a href="/office/workplaces/<%= workplace.id %>/edit">Edit</a>
        <%- include("../../partials/deleteForm", { url: `/office/workplaces/${workplace.id}` }) %>
    <% }) %>
<% } %>
