<section>
    <label>Name*</label>
    <input type="text" name="name" value="<%= driver.name %>" autocomplete="name" required>
</section>
<section>
    <label>Address</label>
    <input type="text" name="address" value="<%= driver.address %>" autocomplete="address-level1">
</section>
<section>
    <label>Phone*</label>
    <input type="tel" name="phone" value="<%= driver.phone %>" autocomplete="mobile" required>
</section>
<section>
    <label>E-mail*</label>
    <input type="email" name="email" value="<%= driver.email %>" autocomplete="email" required>
</section>
<section>
    <label>Password*</label>
    <input type="password" name="password" value="<%= driver.password %>" autocomplete="current-password" required>
</section>
<section>
    <label>Driver License Number*</label>
    <input type="text" name="licenseNo" value="<%= driver.licenseNo %>" required>
</section>
<section>
    <label>Notes</label>
    <textarea name="description"><%= driver.description %></textarea>
</section>
<section>
    <input type="hidden" name="permission" value="driver">
</section>
